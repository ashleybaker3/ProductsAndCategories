@model Product

<form asp-controller="Home" asp-action="CreateProduct">
    <div class="row">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row align-items-center justify-content-start mb-4">
        <label asp-for="Name" class="col-3 form-label fs-2"></label>
        <input asp-for="Name" class="col-5 form-control">  
    </div>
    <div class="row">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="row align-items-center justify-content-start mb-4">
        <label asp-for="Description" class="col-3 form-label fs-2"></label>
        <input asp-for="Description" class="col-5 form-control">  
    </div>
    <div class="row">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="row align-items-center justify-content-start mb-4">
        <label asp-for="Price" class="col-3 form-label fs-2"></label>
        <input asp-for="Price" class="col-2 form-control">  
    </div>
    <div class="row justify-content-center mb-4">
        <button class="btn border border-dark col-2 align-self-center">Submit</button>
    </div>
</form>