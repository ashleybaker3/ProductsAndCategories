@model List<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="row justify-content-between">
        <div class="col text-center pt-5">
            <h3 class="display-5 mb-4">New Product</h3>
            @{
                Product emptyProduct = new Product();
            }
            <partial name="_NewProduct" model="@emptyProduct"></partial>
        </div>
        <div class="col ms-3 border-left border-dark p-5">
            <h3 class="display-5">Existing Products</h3>
            @foreach(Product p in Model)
            {
                <h5><a asp-controller="Home" asp-action="ViewProduct" asp-route-productID="@p.ProductID">@p.Name</a></h5>
            }
        </div>
    </div>
</div>
